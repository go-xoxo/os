{
  "name": "@squirrel-os/hasel-mcp-server",
  "version": "1.0.0",
  "description": "Master MCP Server with DynDNS, IPFS, Web, Playwright, Puppeteer, and HASEL Monads",
  "type": "module",
  "bin": {
    "hasel-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "postinstall": "echo 'Browser automation (Playwright/Puppeteer) requires manual installation if needed'"
  },
  "keywords": [
    "mcp",
    "server",
    "hasel",
    "ipfs",
    "dyndns",
    "playwright",
    "puppeteer",
    "web-scraping",
    "squirrel-os"
  ],
  "author": "xoxo <fritsch.david@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^3.24.1",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "playwright": "^1.49.1",
    "puppeteer": "^23.11.1",
    "ipfs-http-client": "^60.0.1",
    "clipboardy": "^4.0.0",
    "dns-packet": "^5.6.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
